@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        :root {
            --primary: #00f7ff;
            --gray: #a0a0a0;
            --light: #ffffff;
            --darker: #1a1a2e;
            --neon-glow: 0 0 10px rgba(0, 247, 255, 0.7);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #0a0a1a;
            color: white;
            line-height: 1.6;
            min-height: 100vh;
        }

        .main-container {
            max-width: 1200px;
            margin: 0 auto;
            width: 100%;
            padding: 0 20px;
        }

        .profile-container {
            display: grid;
            grid-template-columns: 300px 1fr;
            gap: 30px;
            margin-bottom: 50px;
        }

        @@media (max-width: 768px) {
            .profile-container {
                grid-template-columns: 1fr;
                gap: 20px;
            }
        }

        /* Profile Card */
        .profile-card {
            background-color: rgba(10, 10, 26, 0.6);
            border: 1px solid rgba(0, 247, 255, 0.2);
            border-radius: 10px;
            padding: 25px;
            height: fit-content;
            text-align: center;
            width: 100%;
        }

        .profile-picture {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--primary);
            margin: 0 auto 20px;
            box-shadow: var(--neon-glow);
        }

        .profile-name {
            font-size: 1.5rem;
            color: var(--primary);
            margin-bottom: 5px;
        }

        .profile-email {
            color: var(--gray);
            margin-bottom: 20px;
            word-break: break-all;
        }

        .profile-stats {
            display: flex;
            justify-content: space-around;
            margin: 20px 0;
        }

        .stat-item {
            text-align: center;
        }

        .stat-value {
            font-size: 1.5rem;
            color: var(--primary);
            font-weight: bold;
        }

        .stat-label {
            font-size: 0.8rem;
            color: var(--gray);
        }

        /* Edit Button */
        .edit-btn {
            background: transparent;
            color: var(--primary);
            border: 2px solid var(--primary);
            border-radius: 5px;
            padding: 10px 15px;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s;
            width: 100%;
            margin-top: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .edit-btn:hover {
                background: rgba(0, 247, 255, 0.1);
                box-shadow: var(--neon-glow);
                transform: translateY(-2px);
            }

        /* Profile Details */
        .profile-details {
            background-color: rgba(10, 10, 26, 0.6);
            border: 1px solid rgba(0, 247, 255, 0.2);
            border-radius: 10px;
            padding: 25px;
            width: 100%;
        }

        .section-title {
            font-size: 1.5rem;
            color: var(--primary);
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid rgba(0, 247, 255, 0.2);
            text-align: center;
        }

        /* Courses Grid */
        .courses-grid {
            display: grid;
            gap: 20px;
            margin-top: 20px;
        }

            .courses-grid.has-courses {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            }

        .course-card {
            background-color: var(--darker);
            border-radius: 8px;
            padding: 15px;
            border: 1px solid rgba(0, 247, 255, 0.1);
            transition: all 0.3s;
        }

            .course-card:hover {
                border-color: var(--primary);
                box-shadow: var(--neon-glow);
                transform: translateY(-5px);
            }

        .course-title {
            font-size: 1.1rem;
            color: var(--light);
            margin-bottom: 10px;
            text-align: center;
        }

        .course-progress {
            margin-top: 15px;
        }

        /* Forum Posts */
        .forum-post {
            background-color: var(--darker);
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            border-left: 3px solid var(--primary);
        }

        .forum-post-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            font-size: 0.9rem;
            color: var(--gray);
        }

        .forum-post-title {
            font-weight: bold;
            color: var(--light);
            margin-bottom: 5px;
            font-size: 1.1rem;
        }

        .forum-post-content {
            color: var(--gray);
            margin-bottom: 10px;
            line-height: 1.5;
        }

        .forum-post-date {
            color: var(--primary);
            font-size: 0.8rem;
        }

        .forum-posts-list {
            max-height: 400px;
            overflow-y: auto;
            padding-right: 10px;
        }

        /* Empty State Styles */
        .empty-state-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            min-height: 200px;
        }

        .empty-state {
            color: var(--gray);
            text-align: center;
            padding: 30px;
            font-size: 1.1rem;
            width: 100%;
            max-width: 400px;
        }

            .empty-state i {
                font-size: 2rem;
                margin-bottom: 10px;
                display: block;
                color: var(--primary);
            }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(0, 0, 0, 0.2);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--primary);
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #00d9e0;
            }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="profile-container">
            <!-- Profile Card -->
            <div class="profile-card">
                @if (Model.ProfilePicture != null && Model.ProfilePicture.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProfilePicture)" alt="Profile Picture" class="profile-picture" id="profile-picture">
                }
                else
                {
                    <img src="https://via.placeholder.com/150" alt="Profile Picture" class="profile-picture" id="profile-picture">
                }
                <h2 class="profile-name" id="profile-name">@Model.Username</h2>
                <p class="profile-email" id="profile-email">@Model.Email</p>

                <div class="profile-stats">
                    <div class="stat-item">
                        <div class="stat-value" id="profile-level">@Model.Level</div>
                        <div class="stat-label">Ниво</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value" id="profile-points">@Model.Points</div>
                        <div class="stat-label">Точки</div>
                    </div>
                </div>

                <button class="edit-btn">
                    <i class="fas fa-edit"></i> Редактирай профил
                </button>
            </div>

            <!-- Profile Details -->
            <div class="profile-details">
                <h2 class="section-title">Моите курсове</h2>
                <div class="courses-grid @(Model.Courses != null && Model.Courses.Any() ? "has-courses" : "")" id="courses-grid">
                    @if (Model.Courses != null && Model.Courses.Any())
                    {
                        @foreach (var course in Model.Courses)
                        {
                            <div class="course-card">
                                <h3 class="course-title">@course.Name</h3>
                                <div class="course-progress">
                                    <!-- Прогрес бар или друга информация за курса -->
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state-container">
                            <div class="empty-state">
                                <i class="fas fa-book"></i>
                                <p>Все още нямате записани курсове</p>
                            </div>
                        </div>
                    }
                </div>

                <h2 class="section-title" style="margin-top: 40px;">Моите форумни постове</h2>
                <div id="forum-posts">
                    @if (Model.UserForums != null && Model.UserForums.Any())
                    {
                        <div class="forum-posts-list">
                            @foreach (var post in Model.UserForums)
                            {
                                <div class="forum-post">
                                    <div class="forum-post-header">
                                        <span class="forum-post-date">@post.Date.ToString("dd MMM yyyy HH:mm")</span>
                                        <span>@post.Views преглеждания</span>
                                    </div>
                                    <h3 class="forum-post-title">@post.Title</h3>
                                    <div class="forum-post-content">
                                        @if (post.Content.Length > 150)
                                        {
                                            @post.Content.Substring(0, 150)
                                            <span>...</span>
                                        }
                                        else
                                        {
                                            @post.Content
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state-container">
                            <div class="empty-state">
                                <i class="fas fa-comment"></i>
                                <p>Все още нямате публикувани форумни постове</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}