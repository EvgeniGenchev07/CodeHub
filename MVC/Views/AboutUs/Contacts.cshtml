
@section Styles{
    <link rel="stylesheet" href="~/css/contact.css">
}
<section class="contact-header">
    <h1 class="contact-title">Свържи се с <span class="text-gradient">нас</span></h1>
    <p class="contact-subtitle">
        Имате въпроси или нужда от помощ? Нашият екип е винаги готов да ви помогне.
        Използвайте формата за контакт или се свържете с нас директно чрез предоставените методи.
    </p>
</section>

<!-- Contact Content -->
<div class="contact-content">
    <!-- Contact Form -->
    <section class="contact-form">
        <h2 class="form-title"><i class="fas fa-paper-plane"></i> Изпратете съобщение</h2>
        <form id="contactForm">
            <div class="form-group">
                <label for="name" class="form-label">Име</label>
                <input type="text" id="name" class="form-control" placeholder="Вашето име" required>
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Имейл</label>
                <input type="email" id="email" class="form-control" placeholder="Вашият имейл" required>
            </div>

            <div class="form-group">
                <label for="subject" class="form-label">Тема</label>
                <input type="text" id="subject" class="form-control" placeholder="Тема на съобщението" required>
            </div>

            <div class="form-group">
                <label for="message" class="form-label">Съобщение</label>
                <textarea id="message" class="form-control" placeholder="Вашето съобщение..." required></textarea>
            </div>

            <button type="submit" class="btn btn-primary form-submit">
                <i class="fas fa-paper-plane"></i> Изпрати съобщение
            </button>
        </form>
    </section>

    <!-- Contact Info -->
    <div class="contact-info">
        <div class="info-card">
            <h2 class="info-title"><i class="fas fa-map-marker-alt"></i> Адрес</h2>
