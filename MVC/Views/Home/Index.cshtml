  const mySkills = ["JavaScript", "Algorithms", "Creativity"];
  const opponentSkills = opponent.skills;

  return mySkills.some(skill => 
    skill === "Creativity" || 
    opponentSkills.includes(skill)
  ) ? "Победа!" : "Опитай пак!";
}

const result = battle({
  name: "Противник",
  skills: ["HTML", "CSS"]
});

console.log(result);</code></pre>
