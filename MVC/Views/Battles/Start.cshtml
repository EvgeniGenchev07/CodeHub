@{
    ViewData["Title"] = "Стартиране на Битка";
}
<div class="battle-loading-screen">
    <div class="loading-content">
        <!-- Animated VS Badge -->
        <div class="vs-badge">
            <span>VS</span>
            <div class="vs-pulse"></div>
        </div>

        <!-- Player 1 Loading Card -->
        <div class="player-loading-card player-left">
            <div class="player-avatar loading">
                <div class="avatar-placeholder"></div>
            </div>
            <div class="player-info">
                <div class="loading-bar name-loading"></div>
                <div class="loading-bar stats-loading"></div>
            </div>
        </div>

        <!-- Player 2 Loading Card -->
        <div class="player-loading-card player-right">
            <div class="player-avatar loading">
                <div class="avatar-placeholder"></div>
            </div>
            <div class="player-info">
                <div class="loading-bar name-loading"></div>
                <div class="loading-bar stats-loading"></div>
            </div>
        </div>

        <!-- Loading Progress -->
        <div class="loading-progress">
            <div class="progress-text">Preparing battle...</div>
            <div class="progress-bar">
                <div class="progress-fill"></div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Base Styles */
    :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --accent: #00f7ff;
        --dark: #0f172a;
        --card-bg: #1e293b;
        --border: rgba(80, 80, 180, 0.2);
        --text: #f8fafc;
        --hint: #94a3b8;
    }

    .battle-loading-screen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: var(--dark);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .loading-content {
        position: relative;
        width: 100%;
        max-width: 800px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 4rem;
        padding: 2rem;
    }

    /* Player Loading Cards */
    .player-loading-card {
        width: 220px;
        padding: 1.5rem;
        background: var(--card-bg);
        border-radius: 1rem;
        border: 1px solid var(--border);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
    }

    .player-left {
        transform: translateX(-20px);
        animation: floatLeft 2s ease-in-out infinite;
    }

    .player-right {
        transform: translateX(20px);
        animation: floatRight 2s ease-in-out infinite;
    }

    .player-avatar.loading {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: linear-gradient(135deg, #1e293b, #0f172a);
        margin-bottom: 1.5rem;
        position: relative;
        overflow: hidden;
    }

    .avatar-placeholder {
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
    }

    .player-info {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

    .loading-bar {
        height: 16px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        overflow: hidden;
        position: relative;
    }

    .name-loading {
        width: 80%;
        margin: 0 auto;
    }

    .stats-loading {
        width: 60%;
        margin: 0 auto;
        height: 12px;
    }

    .loading-bar::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 50%;
        height: 100%;
        background: linear-gradient(90deg,
        rgba(255,255,255,0.05),
        rgba(99,102,241,0.3),
        rgba(255,255,255,0.05));
        animation: loadingShimmer 1.5s infinite;
    }

    /* VS Badge */
    .vs-badge {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        width: 80px;
        height: 80px;
        background: var(--card-bg);
        border: 3px solid var(--primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.8rem;
        color: var(--accent);
        z-index: 2;
        box-shadow: 0 0 25px rgba(99,102,241,0.4);
    }

    .vs-badge span {
        position: relative;
        z-index: 2;
    }

    .vs-pulse {
        position: absolute;
        width: 100%;
        height: 100%;
        background: var(--primary);
        border-radius: 50%;
        opacity: 0.3;
        animation: pulse 2s infinite;
    }

    /* Loading Progress */
    .loading-progress {
        position: absolute;
        bottom: 1rem;
        left: 0;
        width: 100%;
        padding: 0 2rem;
    }

    .progress-text {
        color: var(--hint);
        text-align: center;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .progress-bar {
        width: 100%;
        height: 6px;
        background: rgba(255,255,255,0.1);
        border-radius: 3px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        width: 0%;
        background: linear-gradient(90deg, var(--primary), var(--accent));
        border-radius: 3px;
        animation: progressLoad 3000s ease-in-out infinite;
    }

    /* Animations */
    @@keyframes floatLeft {
        0%, 100% { transform: translateX(-20px) translateY(0); }
        50% { transform: translateX(-20px) translateY(-15px); }
    }

    @@keyframes floatRight {
        0%, 100% { transform: translateX(20px) translateY(0); }
        50% { transform: translateX(20px) translateY(-15px); }
    }

    @@keyframes pulse {
        0% { transform: scale(0.8); opacity: 0.3; }
        70% { transform: scale(1.3); opacity: 0; }
        100% { transform: scale(0.8); opacity: 0; }
    }

    @@keyframes loadingShimmer {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(200%); }
    }

    @@keyframes progressLoad {
        0% { width: 0%; }
        50% { width: 80%; }
        100% { width: 100%; }
    }

    /* Responsive */
    @@media (max-width: 768px) {
    .loading-content {
        flex-direction: column;
        gap: 2rem;
    }

    .player-left, .player-right {
        transform: none !important;
        animation: floatMobile 2s ease-in-out infinite !important;
    }

    .vs-badge {
        position: relative;
        left: auto;
        top: auto;
        transform: none;
        margin: 1rem 0;
    }
    }

    @@keyframes floatMobile {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(function() {
        }, 3000);
    });
</script>