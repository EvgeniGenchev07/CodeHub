@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}
@section Styles {
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
}
<div class="register-container">
    <h2>Регистрация</h2>
    <form method="post">
        <div class="form-group">
            <input asp-for="Input.Username" class="form-style" placeholder="Потребителско име" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Input.Email" class="form-style" placeholder="Имейл" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Input.Password" class="form-style password-input" placeholder="Парола" />
            <button type="button" class="toggle-password" onclick="togglePassword(this)">👁</button>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Input.ConfirmPassword" class="form-style password-input" placeholder="Потвърди паролата" />
            <button type="button" class="toggle-password" onclick="togglePassword(this)">👁</button>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-submit">Регистрирай се</button>
    </form>
    <a asp-area="Identity" asp-page="/Account/Login" asp-route-ReturnUrl="@Model.ReturnUrl" class="return-link">Вече имаш акаунт? Вход</a>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(button) {
            const input = button.previousElementSibling;
            const isPassword = input.getAttribute("type") === "password";
            input.setAttribute("type", isPassword ? "text" : "password");
            button.textContent = isPassword ? "👁" : "👁";
        }
    </script>
}
