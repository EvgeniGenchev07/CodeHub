@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Забравихте паролата си?";
}
<div class="container mt-5 mb-auto justify-content-center align-items-center align-self-center justify-self-center text-center">
    
<h1>@ViewData["Title"]</h1>
<h4>Напишете вашия имейл.</h4>
<hr />
<div class="row justify-content-center align-items-center align-self-center justify-self-center text-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Email" placeholder="example@gmail.com" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center align-items-center align-self-center justify-self-center text-center">
                <button type="submit" class="btn btn-primary mt-3">Изпратете</button>
            </div>
            </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
