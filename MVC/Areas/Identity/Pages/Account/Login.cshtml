@page
@model MVC.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Вход";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="login-container">
    <h2 class="login-title"><i class="fas fa-sign-in-alt"></i> Вход</h2>

    <!-- Validation Summary -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Email">Имейл</label>
            <input asp-for="Input.Email" class="form-style" placeholder="example@mail.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password">Парола</label>
            <input asp-for="Input.Password" class="form-style password-input" placeholder="••••••••" />
            <button type="button" class="toggle-password" onclick="togglePassword(this)">👁</button>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group text-end">
            <a class="forgot-password" asp-page="./ForgotPassword">Забравена парола?</a>
        </div>
        <button type="submit" class="login-btn">Влез</button>
    </form>

    <div class="login-footer">
        Нямаш акаунт?
        <a asp-area="Identity" asp-page="/Account/Register" asp-route-ReturnUrl="@Model.ReturnUrl">Регистрирай се</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(button) {
            const input = button.previousElementSibling;
            const isPassword = input.getAttribute("type") === "password";
            input.setAttribute("type", isPassword ? "text" : "password");
            button.textContent = isPassword ? "🙈" : "👁";
        }
    </script>
}
